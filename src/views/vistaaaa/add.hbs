<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="car-bady">
                    <form action=""method="post">
                        <div class="form-group">
                            <label for="">Agregar</label>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="nombre" id="" >
                        </div>
                          <div class="form-group">
                            <input class="form-control" type="text" name="artista" id="" >
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="fecha" id="">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="car-bady">
            <h1>Albumes</h1>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">id</th>
                    <th scope="col">nombre</th>
                    <th scope="col">artista</th>
                    <th scope="col">fecha</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each album}}
                    <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{nombre}}</td>
                    <td>{{artista}}</td>
                    <td>{{fecha}}</td>
                    <td>
                        <a href="delete/{{id}}" class="btn btn-danger">Eliminar</a>
                        <a href="" class="btn btn-info">Modificar</a>
                    </td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
        </div>
    </div>
</div>